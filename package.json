{
  "name": "yamabuki",
  "description": "A custom theme for ghost",
  "version": "0.2.0",
  "engines": {
    "ghost": ">=4.0.0",
    "ghost-api": "v4"
  },
  "license": "MIT",
  "screenshots": {
    "desktop": "assets/screenshot-desktop.jpg"
  },
  "scripts": {
    "dev": "cross-env NODE_ENV=development gulp",
    "serve": "cross-env NODE_ENV=development gulp",
    "build:static": "cross-env NODE_ENV=production gulp build",
    "zip": "cross-env NODE_ENV=production gulp zip",
    "test": "cross-env NODE_ENV=production gscan .",
    "test:ci": "cross-env NODE_ENV=production gscan --fatal --verbose .",
    "pretest": "cross-env NODE_ENV=production gulp build",
    "preship": "cross-env NODE_ENV=production yarn test",
    "ship": "STATUS=$(git status --porcelain); echo $STATUS; if [ -z \"$STATUS\" ]; then yarn version && git push --follow-tags; fi",
    "gc": "git add -A && git-cz && git pull && git push"
  },
  "author": {
    "name": "SunSeekerX",
    "email": "1647800606@qq.com",
    "url": "https://yoouu.cn/"
  },
  "gpm": {
    "type": "theme",
    "categories": [
      "Minimal",
      "Magazine"
    ]
  },
  "keywords": [
    "ghost",
    "theme",
    "ghost-theme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/SunSeekerX/ghost-theme-yamabuki"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "autoprefixer": "10.4.2",
    "babel-loader": "^8.2.3",
    "cross-env": "^7.0.3",
    "cssnano": "5.0.17",
    "gscan": "4.22.0",
    "gulp": "4.0.2",
    "gulp-livereload": "4.0.2",
    "gulp-postcss": "9.0.1",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "3.0.0",
    "gulp-uglify": "3.0.2",
    "gulp-util": "3.0.8",
    "gulp-watch": "5.0.1",
    "gulp-zip": "5.1.0",
    "postcss": "^8.4.7",
    "postcss-color-function": "4.1.0",
    "postcss-custom-properties": "12.1.4",
    "postcss-easy-import": "3.0.0",
    "sass": "^1.49.9",
    "webpack-stream": "^6.1.2"
  },
  "browserslist": [
    "defaults"
  ],
  "config": {
    "posts_per_page": 10,
    "image_sizes": {
      "xxs": {
        "width": 30
      },
      "xs": {
        "width": 100
      },
      "s": {
        "width": 300
      },
      "m": {
        "width": 600
      },
      "l": {
        "width": 1200
      },
      "xl": {
        "width": 2000
      }
    }
  },
  "packageManager": "yarn@3.2.0"
}
